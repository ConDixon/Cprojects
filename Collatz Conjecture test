#include <stdio.h>
int main(){
    long long n;
    long long max = 0;
    printf("Enter in a number: ");
    scanf("%lld", &n);
    while (1){
    max++;
        if (n % 2 == 0){
            //even number
            n = n / 2;
            printf("%lld\n", n);
        }else{
            //odd number
            n = 3*n + 1;
            printf("%lld\n", n);
        }

        if (n == 1  || n < 0){
            break;
        }
    }
    printf("turns = %lld\n", max);
}
